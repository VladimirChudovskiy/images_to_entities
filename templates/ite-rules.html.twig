<h1>{{ "List of rules convert Images to Entities"|t }}</h1>
<div class="content">
    <div class="buttons">
        <a href="/admin/ite/rules/create" class="button">{{ "Create"|t }}</a>
    </div>

    <div class="list">
        {% if list_items is empty %}
            <h2>{{ "Sorry, you don't have any rules"|t }}</h2>
        {% else %}
            <table>
                <tr>
                    <th>{{ "ID"|t }}</th>
                    <th>{{ "Name of rule"|t }}</th>
                    <th>{{ "Entity type"|t }}</th>
                    <th>{{ "Bundle type"|t }}</th>
                    <th>{{ "Actions"|t }}</th>
                </tr>
                {% for item in list_items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.entity_type }}</td>
                        <td>{{ item.entity_bundle }}</td>
                        <td>
                            <a href="/admin/ite/rules/run/{{ item.id }}" class="button button--primary">{{ "Run"|t }}</a>
                            <a href="/admin/ite/rules/edit/{{ item.id }}" class="button">{{ "Edit"|t }}</a>
                            <a href="/admin/ite/rules/{{ item.id }}/config" class="button">{{ "Config"|t }}</a>
                            <a href="/admin/ite/rules/delete/{{ item.id }}" class="button button--danger">{{ "Delete"|t}}</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}

    </div>
</div>
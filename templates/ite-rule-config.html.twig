<h1>{{ "Configuration of rule:"|t }} {{ rule.name }}</h1>
<div class="content">
    <div class="buttons">
        <a href="/admin/ite/rules/{{ rule.id }}/config/create_fc_match" class="button">{{ "Create fc match"|t }}</a>
    </div>

    <div class="list">
        {% if fc_match_items is empty %}
            <h2>{{ "Sorry, you don't have any fc matches"|t }}</h2>
        {% else %}
            <table>
                <tr>
                    <th>{{ "ID"|t }}</th>
                    <th>{{ "Name"|t }}</th>
                    <th>{{ "Field name"|t }}</th>
                    <th>{{ "Field type"|t }}</th>
                    <th>{{ "Actions"|t }}</th>
                </tr>
                {% for item in fc_match_items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.field_name }}</td>
                        <td>{{ item.field_type }}</td>
                        <td>
                            <a href="/admin/ite/rules/{{ rule.id }}/config/edit/{{ item.id }}" class="button">{{ "Edit"|t }}</a>
                            <a href="/admin/ite/rules/{{ rule.id }}/config/{{ item.id }}/config" class="button">{{ "Config"|t }}</a>
                            <a href="/admin/ite/rules/{{ rule.id }}/config/delete/{{ item.id }}" class="button button--danger">{{ "Delete"|t}}</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}

    </div>

</div>